<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="#ffffff"
     >

    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/book_relativelayout"
        >	   
	    <EditText 
	        android:layout_width="220dp" 
	        android:id="@+id/bookedittext"
	        android:layout_height="40dp"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="5dp"
	        android:hint="图书馆账号(学号)"
	        android:background="@drawable/edittext_style"
	        android:gravity="center"
	        android:text="2012112244"
	        />
	    <EditText 
	        android:layout_width="220dp" 
	        android:id="@+id/passwordedittext"
	        android:layout_height="40dp"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="5dp"
	        android:layout_below="@id/bookedittext"
	        android:hint="请输入密码"
	        android:background="@drawable/edittext_style"
	        android:gravity="center"
	        android:text="1234"
	        android:password="true"
	        />
	    <Button 
	        android:layout_width="220dp"
	        android:layout_height="40dp"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="5dp"
	        android:id="@+id/bookbutton"
	        android:layout_below="@id/passwordedittext"
	        android:text="登陆"
	        android:background="@drawable/button_selector"
	        />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/book_relativelayout"
        android:layout_marginTop="10dp"
        >
        <ListView 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/book_listview"
            android:dividerHeight="10dp"
            android:divider="#FFFFFF"
            >
            
        </ListView>
    </RelativeLayout>
</RelativeLayout>

