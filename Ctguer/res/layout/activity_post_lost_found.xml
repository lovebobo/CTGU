
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" 
    android:orientation="vertical" >
      <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/definetitle"
        android:background="#222222"
        >
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="失物招领"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            
            /></RelativeLayout>

<ScrollView 
      android:layout_width="fill_parent"
    android:layout_height="match_parent"
     >
     
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
  
    android:orientation="vertical"
     >
     

<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
           
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
             android:background="@drawable/edit_bg"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
              >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 物品  "
                android:textSize="18dp" 
                android:textColor="#696969"
                 android:layout_marginTop="5dp"
                />
 			<View android:background="@drawable/leba_shape_line"
 				  android:layout_width="1.0px"
 				  android:layout_height="wrap_content"
 				  />
            <EditText
                android:id="@+id/lost_find_edit_goods"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="请 输 入物品名称(不能为空) "
                android:gravity="center"
                android:textSize="16dp"
                android:background="@null"
                android:layout_marginTop="5dp"
               
            
                 />
        </LinearLayout>

        <LinearLayout
              android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
               android:background="@drawable/edit_bg"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             >

          			
            <EditText
                android:id="@+id/lost_find_edit_keyword"
                android:layout_width="fill_parent"
                android:layout_height="140.0sp"
                android:layout_marginLeft="5dp"
                android:hint="请描述物品(不能为空)"
                android:gravity="center"
                android:textSize="16dp" 
                android:background="@null"
                    
                />
        </LinearLayout>

        <LinearLayout
            
              android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
           
            android:orientation="horizontal"
             android:background="@drawable/edit_bg"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 时间  "
                android:textSize="18dp"
                android:textColor="#696969"
                android:layout_marginTop="5dp" />
			<View android:background="@drawable/leba_shape_line"
 				  android:layout_width="1.0px"
 				  android:layout_height="wrap_content"
 				  />
            <EditText
                android:id="@+id/lost_find_edit_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
               android:layout_marginLeft="5dp"
                android:hint="请输入时间"
                android:gravity="center"
                android:textSize="16dp"
                 android:layout_marginTop="5dp"
                    android:background="@null" />
        </LinearLayout>

        <LinearLayout
              android:layout_height="35dp"
             android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
          
            android:orientation="horizontal"
                 android:background="@drawable/edit_bg"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 地点  "
                android:textSize="18dp"
                android:gravity="center"
                 android:textColor="#696969"
                 android:layout_marginTop="5dp" />
			<View android:background="@drawable/leba_shape_line"
 				  android:layout_width="1.0px"
 				  android:layout_height="wrap_content"
 				  />
            <EditText
                android:id="@+id/lost_find_edit_place"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="请输入地点"
                android:gravity="center"
                android:textSize="16dp"
                 android:background="@null" 
                  android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
              android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
             android:layout_height="35dp"
            android:orientation="horizontal"
             android:background="@drawable/edit_bg"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 手机  "
                android:textSize="18dp" 
                 android:textColor="#696969"
                 android:layout_marginTop="5dp" />
			<View android:background="@drawable/leba_shape_line"
 				  android:layout_width="1.0px"
 				  android:layout_height="wrap_content"
 				  />
            <EditText
                android:id="@+id/lost_find_edit_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:hint="请输入手机号"
                android:textSize="16dp"
                android:background="@null"
                 android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
              android:layout_marginTop="18dp"
            android:layout_width="fill_parent"
             android:layout_height="35dp"
            android:orientation="horizontal" 
                android:background="@drawable/edit_bg"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text=" 姓名  "
                android:textSize="18dp"
                android:textColor="#696969"
                android:layout_marginTop="5dp" />
			<View android:background="@drawable/leba_shape_line"
 				  android:layout_width="1.0px"
 				  android:layout_height="wrap_content"
 				  />
            <EditText
                android:id="@+id/lost_find_edit_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="请输入姓名"
                android:gravity="center"
                  android:textSize="16dp"
                android:background="@null"
                 android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
               android:layout_marginTop="18dp"
            android:layout_width="fill_parent"
             android:layout_height="35dp"
            android:orientation="horizontal"
               android:background="@drawable/edit_bg"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 其他  "
                android:textSize="18dp"
                android:textColor="#696969"
                android:layout_marginTop="5dp" />
			<View android:background="@drawable/leba_shape_line"
 				  android:layout_width="1.0px"
 				  android:layout_height="wrap_content"
 				  />
            <EditText
                android:id="@+id/lost_find_edit_other"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
                android:hint="请输入其他信息"
                android:gravity="center"
                    android:textSize="16dp"
                android:background="@null"
                 android:layout_marginTop="5dp" />
        </LinearLayout>

        <RadioGroup
            android:layout_marginTop="15dp"
                   android:layout_marginLeft="30dp"
            android:id="@+id/lost_find_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
        
             >

            <RadioButton
                android:id="@+id/lost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="失物信息" />

            <RadioButton
                android:id="@+id/find"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:text="招领信息" />

        </RadioGroup>
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="fill_parent" 
    android:layout_height="60dp" >
        <Button
            android:id="@+id/lost_find_edit_publish"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="提交信息"
            android:textSize="16dp"
                      android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
                 android:background="@drawable/button_selector"
               
             />
        </LinearLayout>
   
    
    
</LinearLayout>
</ScrollView>
</LinearLayout>
