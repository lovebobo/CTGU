<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout 
        android:layout_height="70dp"
        android:layout_width="match_parent"
        android:id="@+id/RelativeLayout_head"
        android:background="#fbfbfb"
        >
        <ImageView android:layout_width="50dp"
            	   android:layout_height="50dp" 
            	   android:id="@+id/imageView_logo"
            	   android:src="@drawable/circle_icon_sign_big"
            	   android:layout_centerVertical="true"
            	   android:layout_marginLeft="10dp"
            	   />
       <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_toRightOf="@id/imageView_logo"
            android:layout_marginLeft="5dp"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/LinearLayout_nick"
                >
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称:"
                    android:textColor="#4c4c4c"
                    android:id="@+id/text_view_nick"
                    android:layout_centerVertical="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    />
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="此男有点坏"
                    android:layout_alignParentBottom="true"
                    android:textColor="#4c4c4c"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/text_view_nick"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="35dp"
                android:id="@+id/LinearLayout_time"
                android:layout_below="@id/LinearLayout_nick"
                >
                 <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间:"
                    android:textSize="10dp"
                    android:textColor="#969794"
                    android:id="@+id/text_view_time" 
                    android:layout_alignParentTop="true"                  
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    />
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016/4/4"
                    android:textSize="10dp"
                    android:textColor="#969794"
                    android:layout_alignParentTop="true" 
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/text_view_time"
                    android:layout_marginLeft="5dp"
                    />
            </RelativeLayout>
           
        </RelativeLayout>
           
    </RelativeLayout>
    
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="#ffffff"
        android:id="@+id/RelativeLayout_main"
        android:layout_below="@id/RelativeLayout_head"
        >
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/RelativeLayout_place"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地点:"
                android:textColor="#878787"
                android:id="@+id/text_view_place"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子科技大学"
                android:textColor="#878787"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text_view_place"
                android:id="@+id/place"
                />
        </RelativeLayout>
        
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/RelativeLayout_main_time"
            android:layout_below="@id/RelativeLayout_place"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时间:"
                android:textColor="#878787"
                android:id="@+id/text_view_main_time"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016/4/4"
                android:textColor="#878787"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/text_view_main_time"
                android:id="@+id/time"
                />
        </RelativeLayout>
        
         <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RelativeLayout_main_content"
            android:layout_below="@id/RelativeLayout_main_time"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容:"
                android:textColor="#878787"
                android:id="@+id/text_view_main_content"
                android:layout_marginLeft="5dp"
                />
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="android:gravity和android:layout_gravity的区别在于前者对控件内部操作，后者是对整个控件操作。"
                android:layout_marginLeft="5dp"
                android:textColor="#878787"
                android:layout_toRightOf="@id/text_view_main_content"
                android:id="@+id/content"
                />
        </RelativeLayout>
        
         <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RelativeLayout_main_type"
            android:layout_below="@id/RelativeLayout_main_content"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限制人数:"
                android:textColor="#878787"
                android:id="@+id/text_view_main_type"
                android:layout_marginLeft="5dp"
                />
            <TextView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="#878787"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/text_view_main_type"
                android:id="@+id/num"
                />
        </RelativeLayout>
    </RelativeLayout>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/RelativeLayout_main"
	    android:layout_marginTop="5dp"
	    android:background="#fbfbf8"
	    >
	    <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/live_ic_main_difficulty"
	        android:layout_marginLeft="10dp"
	        android:id="@+id/imageView2"
	        />
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="已报名2人"
	        android:textColor="#adadad"
	        android:textSize="7dp"
	        android:layout_toRightOf="@id/imageView2"
	        />
	    
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="2"
	        android:textColor="#adadad"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dp"
	        android:id="@+id/text_view_1"
	        android:textSize="7dp"
	        />
	     <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/live_ic_main_course"
	        android:layout_marginRight="3dp"
	        android:layout_toLeftOf="@id/text_view_1"
	        android:id="@+id/imageView3"
	        />
	     
	     <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="15"
	        android:textColor="#adadad"
	        android:layout_toLeftOf="@id/imageView3"
	        android:layout_marginRight="10dp"
	        android:id="@+id/text_view_2"
	        android:textSize="7dp"
	        />
	     
	      <ImageView android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/live_ic_main_left"
	        android:layout_marginRight="3dp"
	        android:layout_toLeftOf="@id/text_view_2"
	        android:id="@+id/imageView4"
	        />
	</RelativeLayout>
</RelativeLayout>
