<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dip"
    android:descendantFocusability="blocksDescendants"
     >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/list_item" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="书名："
                    android:textSize="19.0sp" />

                <TextView
                    android:id="@+id/bookTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/layout"
                    android:text="书名"
                    android:textSize="19.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

               <TextView
                    android:id="@+id/zerenlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="图书类型："
                  />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/zerenlayout"
                    android:text="中文图书"
                   />
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

               <TextView
                    android:id="@+id/publiclayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登陆ID"
                  />

                <TextView
                    android:id="@+id/publisher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/publiclayout"
                    android:text="A9999"
                   />
            </RelativeLayout>
            
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

               <TextView
                    android:id="@+id/timelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="借书日期："
                  />

                <TextView
                    android:id="@+id/publicationYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/timelayout"
                    android:text="2012-5-3"
                   />
            </RelativeLayout>
            
            
       
            
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

               <TextView
                    android:id="@+id/borrylayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应还日期："
                  />

                <TextView
                    android:id="@+id/available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/borrylayout"
                    android:textColor="#FF3030"
                    android:text="2015-3-5"
                   />
            </RelativeLayout>
            
            
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

               <TextView
                    android:id="@+id/idlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="状态："
                  />

                <TextView
                    android:id="@+id/callNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/idlayout"
                    android:textColor="#FF3030"
                    android:text="续满"
                   />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                >

				<Button
				    android:layout_width="100dp"
				    android:layout_height="30dp"
				    android:id="@+id/myButton"
				    android:layout_alignParentTop="true"
				    android:background="@drawable/button1_selector"
				    android:text="续借" 
				    android:layout_alignParentRight="true"
				    android:visibility="gone"
				    />
              
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>